
root = true

[*.{java,xml,properties,md,html,js,ts,json}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

[*.xml]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,ts,json}]
indent_style = space
indent_size = 2
